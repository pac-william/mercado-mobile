{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "App.tsx", "src/types/**/*", "tests/**/*"],
  "files": ["src/types/react-native-paper.d.ts"]
}
